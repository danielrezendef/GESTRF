@model GESTRF.Models.Usuario
@{
    ViewData["Title"] = "Edit";
    ViewData["TitlePage"] = "Editar";
}
<form asp-controller="Usuario" asp-action="Edit" method="post">
    <div class="col-md-6">
        <div class="form-group">

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                    <input name="Nome" type="text" value="@Html.DisplayFor(modelItem => modelItem.Nome)" class="form-control" placeholder="Nome">
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-at"></i></span>
                    <input name="Username" type="text" value="@Html.DisplayFor(modelItem => modelItem.Username)" class="form-control" placeholder="Username">
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                    <input name="Senha" type="password" value="@Html.DisplayFor(modelItem => modelItem.Senha)" class="form-control" placeholder="Senha">
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                    <input name="Email" type="text" value="@Html.DisplayFor(modelItem => modelItem.Email)" class="form-control" placeholder="Email">
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-user-cog"></i></span>
                    <select name="Perfil" class="form-control select2" style="width: 100%;">
                        <option selected="selected">@Html.DisplayFor(modelItem => modelItem.Perfil)</option>
                        <option>User</option>
                        <option>Admin</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-image"></i></span>
                    <input name="Image" type="text" value="@Html.DisplayFor(modelItem => modelItem.Image)" class="form-control" placeholder="Image">
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-3">
                <div class="input-group mb-2">
                    <button type="submit"  class="btn btn-block btn-success">Salvar </button>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-6">
                <a asp-action="Index" type="button" class="btn btn-block btn-secondary "><i class="fa-solid fa-circle-left"></i> Voltar </a>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
